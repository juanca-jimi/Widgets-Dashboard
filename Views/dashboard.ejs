    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    <script>
      document.getElementById("weatherZip").addEventListener("keypress", function(e){
        if (e.key === "Enter"){
          const zip = e.target.value;
          console.log(zip);
          e.target.value = ""
          fetch(`/weather?zip=${zip}`)
          .then(res => res.json())
          .then(data => {
            console.log(data);
            const temp = data.main.temp;
            const feelsLikeTemp = data.main.feels_like;
            const minTempVal = data.main.temp_min
            const maxTempVal = data.main.temp_max
            const pressureVal = data.main.pressure
            const humidityVal = data.main.humidity
            const weatherContainer = document.getElementById("weatherDetailsContainer")
            if(weatherContainer.children.length !== 0) {
              document.getElementById("weaTemp").innerText = temp
              document.getElementById("feelsLike").innerText = feelsLikeTemp
              document.getElementById("minTemp").innerText = minTempVal
              document.getElementById("maxTemp").innerText = maxTempVal
              document.getElementById("pressure").innerText = pressureVal
              document.getElementById("humidity").innerText = humidityVal

            }
            else {
              weatherContainer.innerHTML = `
                <p id="weaTemp">Temperature : ${temp} F</p>
                <p id="feelsLike">Feels Like :  ${feelsLikeTemp} F</p>
                <p id="minTemp">Min Temperature : ${minTempVal} F</p> 
                <p id="maxTemp">Max Temperature : ${maxTempVal} F</p> 
                <p id="pressure">Max Pressure : ${pressureVal} hPa</p> 
                <p id="pressure">Humidity : ${humidityVal} %</p> 
              `
            }

            
          })
        }
      })
    </script>
