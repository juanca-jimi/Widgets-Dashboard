          </div>
          <div class="api_box bordered_box">
            <% const ranIndex = Math.floor(Math.random() * memeZ.length) %>
            <% const ranMeme = memeZ[ranIndex] %>
            <div class="card">
              <h2><%=ranMeme.name%></h2>
              <div class="card_body">
                  <img src="<%= ranMeme.url %>" alt="<%=ranMeme.name%>">
              </div>
            </div>
         
          </div>
          <div class="api_box bordered_box">
            <div class="card_note">
              <h2>My Notes</h2>
            </div>
            <div class="card_body">
              <textarea></textarea>
            </div>
          </div>
          <div class="api_box bordered_box">
            <div class="card">
              <input id="weatherZip" placeholder="enter zip code to get weather" type="text">
              <div id="weatherDetailsContainer">
                <% if(weatherDetails !== undefined) {%>
                  <p id="weaTemp"><%= weatherDetails.main.temp %></p>
                  <p id="feelsLike"><%= weatherDetails.main.feels_like %></p>
                  <p id="minTemp"><%= weatherDetails.main.temp_min %></p>
                  <p id="maxTemp"><%= weatherDetails.main.temp_max %></p>
                  <p id="pressure"><%= weatherDetails.main.pressure %></p>
                  <p id="humidity"><%= weatherDetails.main.humidity %></p>
                  <% } %>
              </div>
              
            </div>
            <div class="card_body">
              
            </div>
          </div>
          <div class="api_box bordered_box">
            <div class="card"></div>
            <div class="card_body"></div>
          </div>
