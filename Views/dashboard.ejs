    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    <script>
      document.getElementById("weatherZip").addEventListener("keypress", function(e){
        if (e.key === "Enter"){
          const zip = e.target.value;
          console.log(zip);
          e.target.value = ""
          fetch(`/weather?zip=${zip}`)
          .then(res => res.json())
          .then(data => {
            console.log(data);
            const temp = "Temperature :" + data.main.temp + " F";
            const feelsLikeTemp = "Feels Like : " + data.main.feels_like + " F";
            const minTempVal = "Min Temp : " + data.main.temp_min + " F";
            const maxTempVal = "Max Temp : " + data.main.temp_max + " F";
            const pressureVal = "Pressure : " + data.main.pressure + " hPa";
            const humidityVal = "Humidity : " + data.main.humidity + " %";
            const weatherContainer = document.getElementById("weatherDetailsContainer")
            if(weatherContainer.children.length !== 0) {
              document.getElementById("weaTemp").innerText = temp
              document.getElementById("feelsLike").innerText = feelsLikeTemp
              document.getElementById("minTemp").innerText = minTempVal
              document.getElementById("maxTemp").innerText = maxTempVal
              document.getElementById("pressure").innerText = pressureVal
              document.getElementById("humidity").innerText = humidityVal

            }
            else {
              weatherContainer.innerHTML = `
                <p id="weaTemp">${temp}</p> 
                <p id="feelsLike">${feelsLikeTemp} F</p>
                <p id="minTemp">${minTempVal} F</p> 
                <p id="maxTemp">${maxTempVal} F</p> 
                <p id="pressure">${pressureVal} hPa</p> 
                <p id="pressure">${humidityVal} %</p> 
              `
            }

            
          })
        }
      })
    </script>
  </body>
</html>
